<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_uyeEkle_Fragment"
    android:background="@color/gray2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/uyeEkle_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Gruba Üye Ekle "
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/uyeEkle_grupRV"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:layout_height="120dp"
                android:background="@color/white">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/uyeEkle_secilenTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Seçili Grup "
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Rehber"
                android:textColor="#000000" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/uyeekle_rehberRV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:background="@color/white"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/adNumara"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="@string/ogrenci"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="15dp" />
    </LinearLayout>
</FrameLayout>